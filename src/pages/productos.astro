---
// src/pages/productos.astro
import Layout from '../layouts/BaseLayout.astro';

const products = [
    {
        name: 'Explorer',
        logo: '/logos/Explorer.svg',
        features: ['Portable', 'Crusher'],
        category: 'Fragmentación'
    },
    {
        name: 'Hapza',
        features: ['Diseño y Simulación', 'Predicciones', 'QA/QC'],
        category: 'Inteligencia Artificial'
    },
    {
        name: 'OndaX',
        features: ['Portable', 'Estación Móvil'],
        category: 'Vibraciones'
    },
    {
        name: 'ViewHole',
        features: ['Profundidad de Taladros', 'Desviación de Perforación', 'Inclinación de Taladros'],
        category: 'QA/QC'
    }
];
---

<Layout title="Nuestros Productos - Delion">
    <main>
        <section class="relative h-[70vh] w-full flex items-center justify-center text-white overflow-hidden" data-section-theme="dark">
            <img 
                src="/images/fondoproductos.png" 
                alt="Fondo abstracto de productos"
                class="absolute top-0 left-0 w-full h-full object-cover z-0 animate-slow-zoom"
                fetchpriority="high"
            >
            <div class="absolute inset-0 bg-gradient-to-t from-delion-blue/80 to-black/30"></div>
            <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center animate-fade-in-up">
                <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight animate-text-glow">Nuestros Productos</h1>
                <p class="mt-4 text-lg md:text-xl text-gray-200 max-w-2xl mx-auto">Desarrollamos soluciones de vanguardia para la industria moderna.</p>
                <a href="/contacto" class="mt-8 inline-block bg-green-500 text-white font-bold py-4 px-12 rounded-lg shadow-lg hover:bg-green-600 transition-all duration-300 transform hover:scale-110 hover:shadow-2xl hover:shadow-green-500/40 animate-bounce-in">
                    Cotizar Ahora
                </a>
            </div>
        </section>

        <section class="bg-gradient-to-b from-gray-50 to-gray-200 py-20 md:py-24" data-section-theme="light">
            <div class="max-w-5xl mx-auto px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                    {products.map((product, index) => (
                        <div class="group relative bg-white rounded-xl shadow-lg hover:shadow-2xl p-8 flex flex-col transition-all duration-300 transform hover:-translate-y-2 animate-slide-in-up" style={`animation-delay: ${index * 0.15}s`}>
                            <div class="absolute -top-3 -left-3 w-16 h-16 bg-delion-red rounded-full flex items-center justify-center text-white font-bold text-3xl transform group-hover:scale-110 group-hover:rotate-[-12deg] transition-transform duration-300 shadow-lg">
                                {product.name.substring(0, 2)}
                            </div>
                            <div class="flex-grow pt-10">
                                {product.logo ? (
                                    <img src={product.logo} alt={`Logo ${product.name}`} class="h-12 mb-6 transition-transform duration-300 group-hover:scale-105" loading="lazy"/>
                                ) : (
                                    <h2 class="text-4xl font-bold text-gray-800 mb-6">{product.name}</h2>
                                )}
                                <ul class="space-y-3">
                                    {product.features.map(feature => (
                                        <li class="flex items-center group/item">
                                            <span class="font-bold text-delion-red mr-3 text-xl transition-transform duration-300 group-hover/item:translate-x-1">•</span>
                                            <span class="text-gray-700 text-lg">{feature}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                            <p class="text-right text-delion-blue font-bold tracking-wider mt-8 text-lg uppercase">{product.category}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Animaciones optimizadas para rendimiento */
    @keyframes slow-zoom {
        0% { transform: translate3d(0, 0, 0) scale(1); }
        100% { transform: translate3d(0, 0, 0) scale(1.1); }
    }
    @keyframes fade-in-up {
        0% { transform: translate3d(0, 50px, 0); opacity: 0; }
        100% { transform: translate3d(0, 0, 0); opacity: 1; }
    }
    @keyframes slide-in-up {
        0% { transform: translate3d(0, 60px, 0); opacity: 0; }
        100% { transform: translate3d(0, 0, 0); opacity: 1; }
    }
    @keyframes bounce-in {
        0% { transform: scale(0.5); opacity: 0; }
        60% { transform: scale(1.05); }
        100% { transform: scale(1); opacity: 1; }
    }
    
    /* Optimizaciones de rendimiento */
    .animate-slow-zoom { 
        animation: slow-zoom 25s ease-in-out infinite alternate; 
        will-change: transform;
    }
    .animate-fade-in-up { 
        animation: fade-in-up 1s ease-out forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-slide-in-up { 
        animation: slide-in-up 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-bounce-in { 
        animation: bounce-in 1s ease-out 0.5s forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-text-glow {
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.4), 0 0 25px rgba(255, 255, 255, 0.2);
    }
    
    /* Media query para reducir animaciones en dispositivos con preferencia de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .animate-slow-zoom {
            animation: none;
        }
        
        .animate-fade-in-up,
        .animate-slide-in-up,
        .animate-bounce-in {
            animation: fadeIn 0.5s ease-out forwards;
        }
        
        @keyframes fadeIn {
            to { opacity: 1; }
        }
    }
</style>