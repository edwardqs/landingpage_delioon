---
// src/pages/productos.astro
import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="Nuestros Productos - Delion">
    <main>

        <section class="relative h-screen w-full flex items-center justify-center overflow-hidden text-white pt-[100px]" data-section-theme="dark">
            <img 
                src="/images/fondoproductos.svg" 
                alt="Fondo abstracto de productos"
                class="absolute top-0 left-0 w-full h-full object-cover z-0"
            >
            <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
                <div class="flex flex-col md:flex-row justify-between md:items-center gap-8">
                    <div>
                        <h1 class="text-5xl md:text-6xl font-bold">Nuestros Productos</h1>
                        <p class="mt-2 text-lg text-gray-300">Desarrollamos nuestras propias soluciones</p>
                    </div>
                    <a href="#" class="bg-green-500 text-white font-bold py-3 px-8 rounded-md hover:bg-green-600 transition-colors flex-shrink-0">
                        Cotizar
                    </a>
                </div>
                <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
                    <!-- Monitor 1 -->
                    <div class="relative w-full monitor-container">
                        <img src="/images/products/Monitor.png" alt="Monitor" class="w-full h-auto">
                        <div class="absolute monitor-screen">
                            <img src="/images/products/Desktop.png" alt="Interfaz HAPZA - Diseño de Voladuras" class="w-full h-full object-cover monitor-content">
                        </div>
                    </div>
                    <!-- Monitor 2 -->
                    <div class="relative w-full monitor-container">
                        <img src="/images/products/Monitor.png" alt="Monitor" class="w-full h-auto">
                        <div class="absolute monitor-screen">
                            <img src="/images/products/Desktop.png" alt="Interfaz HAPZA - Dashboard Principal" class="w-full h-full object-cover monitor-content">
                        </div>
                    </div>
                    <!-- Monitor 3 -->
                    <div class="relative w-full monitor-container">
                        <img src="/images/products/Monitor.png" alt="Monitor" class="w-full h-auto">
                        <div class="absolute monitor-screen">
                            <img src="/images/products/Desktop.png" alt="Interfaz HAPZA - Análisis de Datos" class="w-full h-full object-cover monitor-content">
                        </div>
                    </div>
                </div>

                <style>
                    .monitor-container {
                        --screen-top: 2.8%;
                        --screen-left: 4%;
                        --screen-width: 93%;
                        --screen-height: 68%;
                        --screen-radius: 0.01rem;
                    }

                    .monitor-screen {
                        top: var(--screen-top);
                        left: var(--screen-left);
                        width: var(--screen-width);
                        height: var(--screen-height);
                        border-radius: var(--screen-radius);
                        overflow: hidden;
                        box-shadow: inset 0 0 5px rgba(0,0,0,0.05);
                    }

                    .monitor-content {
                        transition: transform 0.3s ease;
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                        object-position: center;
                    }

                    .monitor-container:hover .monitor-content {
                        transform: scale(1.01);
                    }

                    /* Ajuste responsivo */
                    @media (max-width: 768px) {
                        .monitor-container {
                            --screen-top: 10.4%;
                            --screen-left: 12.2%;
                            --screen-width: 83.5%;
                            --screen-height: 56.5%;
                        }
                    }

                    /* Pantallas pequeñas */
                    @media (max-width: 480px) {
                        .monitor-container {
                            --screen-top: 10.6%;
                            --screen-left: 12.5%;
                            --screen-width: 83%;
                            --screen-height: 56%;
                        }
                    }
                </style>
            </div>
        </section>

        <section class="bg-white py-20 md:py-24" data-section-theme="light">
            <div class="max-w-7xl mx-auto px-6 lg:px-8">
                
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                    <div>
                        <h2 class="text-5xl font-extrabold text-gray-800">HAPZA</h2>
                        <p class="text-xl text-gray-500 mt-1">Sistema Integral de Perforación y Voladura</p>
                    </div>
                    <a href="#" class="border-2 border-gray-800 text-gray-800 font-bold py-2.5 px-6 rounded-md hover:bg-gray-100 transition flex-shrink-0">
                        Ingresar Aquí
                    </a>
                </div>
        
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16">
                    
                    <div>
                        <ul class="list-disc list-inside space-y-3 text-gray-600">
                            <li>Aplicación WEB.</li>
                            <li>Base de datos en la Nube.</li>
                            <li>Integra datos de administración, diseño, servicios técnicos y QA/QC.</li>
                            <li>Aplicación Móvil para conciliación de datos en terreno.</li>
                            <li>Diseño de mallas de voladuras con IA.</li>
                            <li>Sincronización con Explorer y otros Hardware.</li>
                            <li>Compatible con detonadores electrónicos y pirotécnicos.</li>
                            <li>Archivos DXF, CSV y KML.</li>
                            <li>Simulación de Vibraciones Campo Cercano y Lejano, Fragmentación, Flyrock, Apilamiento, Isotiempos y otros.</li>
                            <li>Generación de reportes administrativos y técnicos.</li>
                            <li>Trazabilidad completa de la perforación y voladura.</li>
                        </ul>
                    </div>
        
                    <div class="space-y-6">
                        
                        <div class="grid grid-cols-[1fr_auto] items-center gap-4">
                            <span class="text-2xl font-semibold text-gray-700 text-right">Polvorín</span>
                            <img src="/icons/icons-products/Dynamite.svg" alt="Icono de Polvorín" width="28" height="28">
                        </div>
                         <div class="grid grid-cols-[1fr_auto] items-center gap-4">
                            <span class="text-2xl font-semibold text-gray-700 text-right">Servicios Técnicos</span>
                            <img src="/icons/icons-products/Service.svg" alt="Icono de Servicios Técnicos" width="28" height="28">
                        </div>
                         <div class="grid grid-cols-[1fr_auto] items-center gap-4">
                            <span class="text-2xl font-semibold text-gray-700 text-right">Diseño de Voladuras</span>
                            <img src="/icons/icons-products/Design.svg" alt="Icono de Diseño de Voladuras" width="28" height="28">
                        </div>
                         <div class="grid grid-cols-[1fr_auto] items-center gap-4">
                            <span class="text-2xl font-semibold text-gray-700 text-right">QA/QC</span>
                            <img src="/icons/icons-products/Guarantee.svg" alt="Icono de QA/QC" width="28" height="28">
                        </div>
        
                    </div>
                </div>
        
                <div class="mt-12 flex justify-end">
                    <a href="#" class="bg-[#DE1207] text-white font-bold py-3 px-6 rounded-md hover:bg-opacity-90 transition flex items-center gap-2">
                         <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                        Brochure
                    </a>
                </div>
            </div>
        </section>

    </main>
</Layout>