<style>
    /* Animaciones optimizadas para rendimiento */
    @keyframes float {
        0%, 100% { transform: translate3d(0, 0, 0); }
        50% { transform: translate3d(0, -20px, 0); }
    }
    
    @keyframes float-delayed {
        0%, 100% { transform: translate3d(0, 0, 0); }
        50% { transform: translate3d(0, -15px, 0); }
    }
    
    @keyframes slide-in-right {
        0% { transform: translate3d(100px, 0, 0); opacity: 0; }
        100% { transform: translate3d(0, 0, 0); opacity: 1; }
    }
    
    @keyframes slide-in-left {
        0% { transform: translate3d(-100px, 0, 0); opacity: 0; }
        100% { transform: translate3d(0, 0, 0); opacity: 1; }
    }
    
    @keyframes fade-in-up {
        0% { transform: translate3d(0, 50px, 0); opacity: 0; }
        100% { transform: translate3d(0, 0, 0); opacity: 1; }
    }
    
    @keyframes bounce-in {
        0% { transform: scale(0.3); opacity: 0; }
        50% { transform: scale(1.05); }
        70% { transform: scale(0.9); }
        100% { transform: scale(1); opacity: 1; }
    }
    
    @keyframes shimmer {
        0% { transform: translate3d(-100%, 0, 0); }
        100% { transform: translate3d(100%, 0, 0); }
    }
    
    @keyframes slow-zoom {
        0% { transform: scale(1); }
        100% { transform: scale(1.1); }
    }
    
    @keyframes gradient-shift {
        0%, 100% { transform: translate3d(0, 0, 0); }
        50% { transform: translate3d(20px, 0, 0); }
    }
    
    /* Optimizaciones de rendimiento */
    .animate-float { 
        animation: float 6s ease-in-out infinite; 
        will-change: transform;
    }
    .animate-float-delayed { 
        animation: float-delayed 8s ease-in-out infinite; 
        will-change: transform;
    }
    .animate-slide-in-right { 
        animation: slide-in-right 1.5s ease-out forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-slide-in-left { 
        animation: slide-in-left 1.5s ease-out forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-fade-in-up { 
        animation: fade-in-up 1s ease-out forwards; 
        opacity: 0; 
        will-change: transform, opacity;
    }
    .animate-bounce-in { 
        animation: bounce-in 1.2s ease-out; 
        will-change: transform, opacity;
    }
    .animate-shimmer { 
        animation: shimmer 3s ease-in-out infinite; 
        will-change: transform;
    }
    .animate-slow-zoom { 
        animation: slow-zoom 20s ease-in-out infinite alternate; 
        will-change: transform;
    }
    .animate-gradient-shift { 
        animation: gradient-shift 8s ease-in-out infinite; 
        will-change: transform;
    }
    .animate-spin-slow { 
        animation: spin 8s linear infinite; 
        will-change: transform;
    }
    .animate-bounce-slow { 
        animation: bounce 3s ease-in-out infinite; 
        will-change: transform;
    }
    .animate-pulse-slow { 
        animation: pulse 4s ease-in-out infinite; 
        will-change: transform;
    }
    
    .animate-text-glow {
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.3), 0 0 20px rgba(222, 18, 7, 0.4);
    }
    
    /* Media query para reducir animaciones en dispositivos con preferencia de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .animate-float,
        .animate-float-delayed,
        .animate-shimmer,
        .animate-slow-zoom,
        .animate-gradient-shift,
        .animate-spin-slow,
        .animate-bounce-slow,
        .animate-pulse-slow {
            animation: none;
        }
        
        .animate-slide-in-right,
        .animate-slide-in-left,
        .animate-fade-in-up,
        .animate-bounce-in {
            animation: fadeIn 0.5s ease-out forwards;
        }
        
        @keyframes fadeIn {
            to { opacity: 1; }
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.carousel-slide');
        let currentSlide = 0;

        if (slides.length > 1) {
            setInterval(() => {
                slides[currentSlide].classList.remove('opacity-100');
                slides[currentSlide].classList.add('opacity-0');

                currentSlide = (currentSlide + 1) % slides.length;

                slides[currentSlide].classList.remove('opacity-0');
                slides[currentSlide].classList.add('opacity-100');
            }, 5000); // Cambia cada 5 segundos para dar tiempo a leer
        }
        
        // Optimización: Usar Intersection Observer para animaciones
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Solo observar elementos con animaciones de entrada
        document.querySelectorAll('[class*="animate-"]').forEach(el => {
            if (el.matches('.animate-slide-in-right, .animate-slide-in-left, .animate-fade-in-up')) {
                 observer.observe(el);
            }
        });
    });
</script>