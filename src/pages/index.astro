---
// src/pages/index.astro
import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="Delion - El Arte de la Ciencia">
    <main>
        
        <section class="relative h-[calc(100vh-100px)] w-full flex items-center justify-center overflow-hidden bg-black" data-section-theme="dark">
            <div id="hero-carousel" class="absolute inset-0 w-full h-full">

                <div class="carousel-slide absolute inset-0 w-full h-full transition-opacity duration-1000 ease-in-out opacity-100">
                    <img 
                      src="/613ad18f1f743e19dcd6436ac8b153af0428c405.png" 
                      alt="Robot ilustrador representando la innovación" 
                      class="absolute inset-0 w-full h-full object-cover object-center z-0 opacity-40 animate-float"
                    />
                    <div class="relative z-10 w-full h-full max-w-7xl mx-auto">
                        <div class="absolute top-1/2 right-32 -translate-y-1/2 text-white text-right animate-slide-in-right">
                            <h1 class="text-5xl md:text-6xl font-light leading-tight animate-text-glow">
                                Brindamos soluciones<br/>
                                <span class="font-semibold animate-pulse">innovadoras y sostenibles</span>
                            </h1>
                        </div>
                    </div>
                </div>

                <div class="carousel-slide absolute inset-0 w-full h-full transition-opacity duration-1000 ease-in-out opacity-0">
                    <img 
                        src="/Banner2.svg" 
                        alt="Maquinaria y tecnología en una cantera"
                        class="absolute top-0 left-0 w-full h-full object-cover z-0 opacity-40 animate-float-delayed"
                    />
                    <div class="relative z-20 w-full h-full flex flex-col items-center justify-center text-center px-6 text-white">
                        <h1 class="text-5xl md:text-7xl font-bold mb-12 animate-bounce-in">Nuestros Productos</h1>
                        <nav class="flex items-center justify-center gap-x-8 md:gap-x-12 text-lg md:text-2xl font-semibold animate-fade-in-up">
                            <a href="/productos#explorer" class="flex items-center gap-x-2 text-white opacity-100 border-b-2 border-delion-red pb-2 transition-all duration-300 hover:scale-110 hover:shadow-lg">
                                <img src="/logos/logoexplorer.svg" alt="Explorer Logo" class="h-8 w-auto hover:rotate-12 transition-transform duration-300">
                            </a>
                            <a href="/productos#hapza" class="text-white opacity-70 hover:opacity-100 transition-all duration-300 pb-2 border-b-2 border-transparent hover:border-white/50 hover:scale-110">Hapza</a>
                            <a href="/productos" class="text-white opacity-70 hover:opacity-100 transition-all duration-300 pb-2 border-b-2 border-transparent hover:border-white/50 hover:scale-110">Pulsar</a>
                            <a href="/productos" class="text-white opacity-70 hover:opacity-100 transition-all duration-300 pb-2 border-b-2 border-transparent hover:border-white/50 hover:scale-110">DirectHole</a>
                        </nav>
                    </div>
                </div>

            </div>

            {/* CAMBIO: Se ajustó la posición de bottom-10 a bottom-16 */}
            <div class="absolute bottom-16 left-0 right-0 px-16 md:px-24 lg:px-40 flex justify-between items-center z-30 max-w-screen-2xl mx-auto animate-fade-in-up-delayed">
                <div class="text-white text-2xl font-serif italic hover:scale-105 transition-transform duration-300 cursor-pointer">
                    El arte de la ciencia
                </div>
                <a href="/contacto" class="bg-red-600 text-white font-bold py-3 px-8 rounded hover:bg-red-700 transition-all duration-300 hover:scale-110 hover:shadow-xl animate-pulse-slow">
                    Contáctanos
                </a>
            </div>
        </section>

        <section class="text-white py-24 md:py-40 bg-gradient-to-b from-[#0A192F] to-[#4d0b1a] relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent animate-shimmer"></div>
            <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-16 items-center">
                    <div class="md:col-span-2 w-full animate-slide-in-left">
                        <img 
                            src="https://images.unsplash.com/photo-1521737711867-e3b97375f902?q=80&w=1887&auto=format&fit=crop" 
                            alt="Equipo de Delion trabajando en un proyecto tecnológico" 
                            class="w-full h-auto object-cover rounded-lg hover:scale-105 transition-transform duration-500 shadow-2xl hover:shadow-red-500/25"
                        >
                    </div>
                    <div class="md:col-span-3 md:text-right animate-slide-in-right">
                        <h2 class="text-5xl md:text-6xl font-bold leading-tight hover:text-red-400 transition-colors duration-300">
                            Si no existe, lo creamos y si existe, lo mejoramos
                        </h2>
                        <p class="mt-8 text-xl md:text-2xl text-gray-300 leading-relaxed max-w-2xl ml-auto hover:text-white transition-colors duration-300">
                            Somos una empresa comprometida con el desarrollo tecnológico y el bienestar de nuestros clientes.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section class="relative bg-gray-50 py-20 md:py-24 overflow-hidden" data-section-theme="light">
            <img 
                src="/images/persongeolocalitation.jpg" 
                alt="Fondo de trabajo geolocalizado"
                class="absolute inset-0 z-0 w-full h-full object-cover opacity-10 animate-slow-zoom"
            />
            <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                    <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm hover:shadow-2xl hover:scale-105 transition-all duration-500 cursor-pointer animate-fade-in-up" style="animation-delay: 0.1s;">
                        <div class="flex justify-center items-center h-16 w-16 rounded-full bg-red-50 mx-auto hover:scale-110 transition-transform duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#DE1207" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-spin-slow"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>
                        </div>
                        <h3 class="text-2xl font-bold mt-6 text-[#DE1207] hover:scale-105 transition-transform duration-300">Misión</h3>
                        <p class="mt-4 text-gray-600 text-sm">Brindar a nuestros clientes soluciones innovadoras para contribuir al desarrollo sostenible de la empresa.</p>
                    </div>
                    <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm hover:shadow-2xl hover:scale-105 transition-all duration-500 cursor-pointer animate-fade-in-up" style="animation-delay: 0.2s;">
                        <div class="flex justify-center items-center h-16 w-16 rounded-full bg-blue-50 mx-auto hover:scale-110 transition-transform duration-300">
                             <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#0C3C6F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-bounce-slow"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>
                        </div>
                        <h3 class="text-2xl font-bold mt-6 text-[#0C3C6F] hover:scale-105 transition-transform duration-300">Visión</h3>
                        <p class="mt-4 text-gray-600 text-sm">Ser líderes en el desarrollo de herramientas informáticas e instrumentación especializada.</p>
                    </div>
                    <div class="bg-white p-8 rounded-lg border border-gray-200 shadow-sm hover:shadow-2xl hover:scale-105 transition-all duration-500 cursor-pointer animate-fade-in-up" style="animation-delay: 0.3s;">
                         <div class="flex justify-center items-center h-16 w-16 rounded-full bg-red-50 mx-auto hover:scale-110 transition-transform duration-300">
                             <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#DE1207" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-pulse-slow"><path d="m12 1-2.2 4.8-5.2.4 4.1 3.4-1.2 5L12 12l4.4 2.6-1.2-5 4.1-3.4-5.2-.4Z"/></svg>
                        </div>
                        <h3 class="text-2xl font-bold mt-6 text-[#DE1207] hover:scale-105 transition-transform duration-300">Valores</h3>
                        <ul class="mt-4 text-gray-600 text-left text-sm space-y-2 list-disc list-inside">
                            <li class="hover:text-red-600 transition-colors duration-300">Investigación e innovación</li>
                            <li class="hover:text-red-600 transition-colors duration-300">Calidad en productos y servicios</li>
                            <li class="hover:text-red-600 transition-colors duration-300">Servicio y atención durante el ciclo comercial</li>
                            <li class="hover:text-red-600 transition-colors duration-300">Flexibilidad al cambio</li>
                        </ul>
                    </div>
                </div>
                <div class="mt-20 md:mt-24 text-center">
                    <h2 class="text-4xl font-bold text-gray-800 hover:text-red-600 transition-colors duration-300">Estamos Orientados a</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-10 mt-12 max-w-4xl mx-auto">
                        <div class="flex flex-col items-center hover:scale-110 transition-all duration-300 cursor-pointer animate-fade-in-up" style="animation-delay: 0.4s;">
                            <img src="/icons/Speed.svg" alt="Icono de Medir" width="64" height="64" class="hover:rotate-12 transition-transform duration-300" />
                            <span class="text-xl font-semibold mt-4 text-gray-700 hover:text-red-600 transition-colors duration-300">Medir</span>
                        </div>
                        <div class="flex flex-col items-center hover:scale-110 transition-all duration-300 cursor-pointer animate-fade-in-up" style="animation-delay: 0.5s;">
                            <img src="/icons/Analyze.svg" alt="Icono de Analizar" width="64" height="64" class="hover:rotate-12 transition-transform duration-300" />
                            <span class="text-xl font-semibold mt-4 text-gray-700 hover:text-red-600 transition-colors duration-300">Analizar</span>
                        </div>
                        <div class="flex flex-col items-center hover:scale-110 transition-all duration-300 cursor-pointer animate-fade-in-up" style="animation-delay: 0.6s;">
                            <img src="/icons/Warning Shield.svg" alt="Icono de Identificar" width="64" height="64" class="hover:rotate-12 transition-transform duration-300" />
                            <span class="text-xl font-semibold mt-4 text-gray-700 hover:text-red-600 transition-colors duration-300">Identificar</span>
                        </div>
                        <div class="flex flex-col items-center hover:scale-110 transition-all duration-300 cursor-pointer animate-fade-in-up" style="animation-delay: 0.7s;">
                            <img src="/icons/Idea Sharing.svg" alt="Icono de Resolver" width="64" height="64" class="hover:rotate-12 transition-transform duration-300" />
                            <span class="text-xl font-semibold mt-4 text-gray-700 hover:text-red-600 transition-colors duration-300">Resolver</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-white py-20 md:py-24 relative overflow-hidden" data-section-theme="light">
            <div class="absolute inset-0 bg-gradient-to-r from-red-50/30 via-transparent to-blue-50/30 animate-gradient-shift"></div>
            <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-12 hover:text-red-600 transition-colors duration-300 animate-fade-in-up">
                    Empresas que confían en nosotros
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-x-8 gap-y-16 items-center">
                    <a href="#" target="_blank" class="flex justify-center hover:scale-110 transition-transform duration-300 animate-fade-in-up" style="animation-delay: 0.1s;">
                        <img src="/logos/famesa.svg" alt="Logo Famesa" class="max-h-10 w-auto filter grayscale hover:grayscale-0 transition-all duration-500 hover:drop-shadow-lg">
                    </a>
                    <a href="#" target="_blank" class="flex justify-center hover:scale-110 transition-transform duration-300 animate-fade-in-up" style="animation-delay: 0.2s;">
                        <img src="/logos/cosmos.svg" alt="Logo Cosmos Blasting" class="max-h-16 w-auto filter grayscale hover:grayscale-0 transition-all duration-500 hover:drop-shadow-lg">
                    </a>
                    <a href="#" target="_blank" class="flex justify-center hover:scale-110 transition-transform duration-300 animate-fade-in-up" style="animation-delay: 0.3s;">
                        <img src="/logos/minsup.svg" alt="Logo Minsup Minería" class="max-h-12 w-auto filter grayscale hover:grayscale-0 transition-all duration-500 hover:drop-shadow-lg">
                    </a>
                    <a href="#" target="_blank" class="flex justify-center hover:scale-110 transition-transform duration-300 animate-fade-in-up" style="animation-delay: 0.4s;">
                        <img src="/logos/sanmartin.svg" alt="Logo San Martín" class="max-h-20 w-auto filter grayscale hover:grayscale-0 transition-all duration-500 hover:drop-shadow-lg">
                    </a>
                    <a href="#" target="_blank" class="flex justify-center hover:scale-110 transition-transform duration-300 animate-fade-in-up" style="animation-delay: 0.5s;">
                        <img src="/logos/zoluzion.svg" alt="Logo Zoluzion" class="max-h-16 w-auto filter grayscale hover:grayscale-0 transition-all duration-500 hover:drop-shadow-lg">
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }
    
    @keyframes float-delayed {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
    }
    
    @keyframes slide-in-right {
        0% { transform: translateX(100px); opacity: 0; }
        100% { transform: translateX(0); opacity: 1; }
    }
    
    @keyframes slide-in-left {
        0% { transform: translateX(-100px); opacity: 0; }
        100% { transform: translateX(0); opacity: 1; }
    }
    
    @keyframes fade-in-up {
        0% { transform: translateY(50px); opacity: 0; }
        100% { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes fade-in-up-delayed {
        0% { transform: translateY(50px); opacity: 0; }
        100% { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes bounce-in {
        0% { transform: scale(0.3); opacity: 0; }
        50% { transform: scale(1.05); }
        70% { transform: scale(0.9); }
        100% { transform: scale(1); opacity: 1; }
    }
    
    @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
    
    @keyframes slow-zoom {
        0% { transform: scale(1); }
        100% { transform: scale(1.1); }
    }
    
    @keyframes gradient-shift {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(20px); }
    }
    
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }
    
    .animate-float-delayed {
        animation: float-delayed 8s ease-in-out infinite;
    }
    
    .animate-slide-in-right {
        animation: slide-in-right 1.5s ease-out;
    }
    
    .animate-slide-in-left {
        animation: slide-in-left 1.5s ease-out;
    }
    
    .animate-fade-in-up {
        animation: fade-in-up 1s ease-out forwards;
    }
    
    .animate-fade-in-up-delayed {
        animation: fade-in-up 1.5s ease-out 0.5s forwards;
        opacity: 0;
    }
    
    .animate-bounce-in {
        animation: bounce-in 1.2s ease-out;
    }
    
    .animate-shimmer {
        animation: shimmer 3s ease-in-out infinite;
    }
    
    .animate-slow-zoom {
        animation: slow-zoom 20s ease-in-out infinite alternate;
    }
    
    .animate-gradient-shift {
        animation: gradient-shift 8s ease-in-out infinite;
    }
    
    .animate-spin-slow {
        animation: spin 8s linear infinite;
    }
    
    .animate-bounce-slow {
        animation: bounce 3s ease-in-out infinite;
    }
    
    .animate-pulse-slow {
        animation: pulse 4s ease-in-out infinite;
    }
    
    .animate-text-glow {
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.carousel-slide');
        let currentSlide = 0;

        if (slides.length > 1) {
            setInterval(() => {
                slides[currentSlide].classList.remove('opacity-100');
                slides[currentSlide].classList.add('opacity-0');

                currentSlide = (currentSlide + 1) % slides.length;

                slides[currentSlide].classList.remove('opacity-0');
                slides[currentSlide].classList.add('opacity-100');
            }, 3000); // Cambia cada 3 segundos
        }
        
        // Animaciones al hacer scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && entry.target instanceof HTMLElement) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        // Observar elementos para animaciones
        document.querySelectorAll('.animate-fade-in-up').forEach(el => {
            if (el instanceof HTMLElement) {
                el.style.opacity = '0';
                el.style.transform = 'translateY(50px)';
                observer.observe(el);
            }
        });
    });
</script>