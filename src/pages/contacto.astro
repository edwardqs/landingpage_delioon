---
// src/pages/contacto.astro
import Layout from '../layouts/BaseLayout.astro';

const contactInfo = {
    address: "Calle Colombia 150, Urb. El Recreo - Trujillo, La Libertad, Perú",
    phone: "+51 913851514",
    email: "info@delionperu.com",
    linkedinUrl: "#",
    facebookUrl: "#"
};
---

<Layout title="Contacto - Delion" showFooter={false}>
  <main class="overflow-x-hidden">
    <section class="relative w-full py-20 sm:py-24 flex items-start justify-center min-h-screen" data-section-theme="light">
      <img 
        src="/images/contacto/fondocontacto.svg" 
        alt="Fondo decorativo de contacto" 
        class="absolute inset-0 w-full h-full object-cover object-center z-0"
      >

      <div class="relative z-10 w-full max-w-4xl mx-auto px-2 sm:px-3 lg:px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 shadow-xl rounded-lg overflow-hidden bg-white/10 backdrop-blur-sm">

          {/* Columna Izquierda: Información */}
          <div class="bg-[#0C3C6F]/90 backdrop-blur-sm text-white p-4 sm:p-6 lg:p-8 flex flex-col order-2 lg:order-1">
            <h2 class="text-2xl sm:text-3xl font-bold mb-2">Ubicación</h2>
            <p class="mb-4 text-sm sm:text-base">{contactInfo.address}</p>
            
            <div class="w-full aspect-video rounded-md overflow-hidden mb-6 sm:mb-8">
              <iframe 
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3949.627797825226!2d-79.03578762582846!3d-8.13941408169225!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91ad3d9c31320439%3A0x1b4181987158913b!2sC.%20Colombia%20150%2C%20Trujillo%2013008!5e0!3m2!1ses-419!2spe!4v1723485412586!5m2!1ses-419!2spe" 
                  width="100%" 
                  height="100%" 
                  style="border:0;" 
                  allowfullscreen="" 
                  loading="lazy" 
                  referrerpolicy="no-referrer-when-downgrade">
              </iframe>
            </div>

            <div class="space-y-4 mb-6 sm:mb-8">
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <a href={`tel:${contactInfo.phone}`} class="hover:underline text-sm sm:text-base break-all">
                  {contactInfo.phone}
                </a>
              </div>
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0">
                  <rect width="20" height="16" x="2" y="4" rx="2"/>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                </svg>
                <a href={`mailto:${contactInfo.email}`} class="hover:underline text-sm sm:text-base break-all">
                  {contactInfo.email}
                </a>
              </div>
            </div>
            
            <div class="mt-auto">
              <h3 class="text-xl sm:text-2xl font-bold mb-4">Síguenos</h3>
              <div class="flex gap-4 mb-6 sm:mb-8">
                <a href={contactInfo.linkedinUrl} target="_blank" class="hover:opacity-80 transition-opacity">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                    <rect width="4" height="12" x="2" y="9"/>
                    <circle cx="4" cy="4" r="2"/>
                  </svg>
                </a>
                <a href={contactInfo.facebookUrl} target="_blank" class="hover:opacity-80 transition-opacity">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                  </svg>
                </a>
              </div>
              <p class="text-xs sm:text-sm text-gray-400">© 2024 Política de Privacidad</p>
            </div>
          </div>

          {/* Columna Derecha: Formulario */}
          <div class="bg-white/90 backdrop-blur-sm p-3 sm:p-4 lg:p-6 order-1 lg:order-2">
            <h2 class="text-base sm:text-lg font-bold text-gray-800 uppercase mb-3">
              Contacto
            </h2>
            <form action="#" class="space-y-4">
              <div>
                <input 
                  type="text" 
                  placeholder="Nombre" 
                  class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition text-sm"
                >
              </div>
              <div>
                <input 
                  type="email" 
                  placeholder="Email" 
                  class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition text-sm"
                >
              </div>
              <div>
                <input 
                  type="text" 
                  placeholder="Empresa" 
                  class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition text-sm"
                >
              </div>
              <div>
                <select class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition text-gray-500 text-sm">
                  <option selected disabled>Categoría</option>
                  <option>General</option>
                  <option>Soporte</option>
                  <option>Ventas</option>
                </select>
              </div>
              <div>
                <select class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition text-gray-500 text-sm">
                  <option selected disabled>Producto</option>
                  <option>Explorer</option>
                  <option>Hapza</option>
                  <option>Pulsar</option>
                  <option>DirectHole</option>
                  <option>Otro</option>
                </select>
              </div>
              <div>
                <textarea 
                  placeholder="Mensaje" 
                  rows="4" 
                  class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-delion-blue outline-none transition resize-none text-sm"
                ></textarea>
              </div>
              <div class="text-right pt-2">
                <button 
                  type="submit" 
                  class="bg-gradient-to-r from-[#0A192F] to-[#4d0b1a] text-white font-bold py-3 px-8 rounded-md hover:opacity-90 transition-opacity w-full sm:w-auto"
                >
                  Enviar
                </button>
              </div>
            </form>
          </div>

        </div>
      </div>
    </section>
  </main>
</Layout>